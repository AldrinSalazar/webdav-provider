<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WebDAVProvider" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_gray_200</item>
        <item name="colorPrimaryVariant">@color/blue_gray_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.WebDAVProvider.Default" parent="Theme.WebDAVProvider" />

    <style name="ThemeOverlay.WebDAVProvider.AppBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/design_dark_default_color_background</item>
    </style>

    <style name="ThemeOverlay.WebDAVProvider.Popup" parent="ThemeOverlay.MaterialComponents.Dark" />
</resources>
